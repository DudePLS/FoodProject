@page "/recipes/view/{id:min(1)}"
@model Food_Sem.Pages.Recipes.DetailsModel
@{
    ViewData["Title"] = "Details";
    var photoPath = "~/images/" + (Model.Recipe.PhotoPath ?? "noimage.jpg");
}

<div class="row justify-content-center m-3">
    
    <div class="col-sm-8">
        @await Component.InvokeAsync("HeadCount", new {type = Model.Recipe.TypeOfDish})
    </div>
    
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Recipe.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <h4>Recipe ID : @Model.Recipe.Id</h4>
                <h4>Type Of Dish : @Model.Recipe.TypeOfDish</h4>
                <h4>Cooking Time : @Model.Recipe.CookingTime</h4>
                <h4>Recept Text : @Model.Recipe.RecipeText</h4>


            </div>
            <div class="card-footer text-center">
                <a asp-page="index"
                   class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>